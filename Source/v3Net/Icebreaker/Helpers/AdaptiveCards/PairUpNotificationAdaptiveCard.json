{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "It's time for a match!",
          "wrap": true,
          "maxLines": 2
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "You've been matched with %matchedPerson%.",
              "wrap": true
            }
          ]
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "Hi there again, I'm %botDisplayName% in %team%. A bot that pairs you with a new coworker to meet each week. This week your match is %matchedPerson%.",
              "wrap": true
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "If you've got the inclination, set something up. See, meeting people *is* easy!",
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Chat with %receiverName%",
      "url": "https://teams.microsoft.com/l/chat/0/0?users=%personUpn%&message=👋Hi%20there%20"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Propose meetup",
      "url": "%meetingLink%"
    },
    {
      "type": "Action.Submit",
      "title": "%pauseMatches%",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "%pauseMatches%",
          "text": "optout"
        }
      }
    }
  ],
  "version": "1.0"
}