{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%introMessage%",
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "%pauseMatchesText%",
      "data": {
        "optout": true
      }
    },
    {
      "type": "Action.OpenUrl",
      "title": "Take a tour",
      "url": "%tourUrl%"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}